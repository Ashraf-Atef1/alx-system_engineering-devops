#!/bin/bash

# Check if the password argument is provided
if [ -z "$1" ]; then
    echo "Usage: $0 <mysql_password>"
    exit 1
fi

# Get the current date in the required format (day-month-year)
current_date=$(date +'%d-%m-%Y')

# MySQL dump file name
dump_file="backup.sql"

# Compressed archive name
archive_name="$current_date.tar.gz"

# MySQL dump command
mysqldump --user=root --password="$1" --all-databases > "$dump_file"

# Check if mysqldump was successful
if [ $? -ne 0 ]; then
    echo "MySQL dump failed. Exiting."
    exit 1
fi

# Create a tar.gz archive
tar -czf "$archive_name" "$dump_file"

# Check if tar command was successful
if [ $? -ne 0 ]; then
    echo "Compression failed. Exiting."
    exit 1
fi

echo "Backup completed successfully. Archive created: $archive_name"
